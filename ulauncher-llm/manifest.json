{
    "required_api_version": "^2.0.0",
    "name": "LLM Assistant",
    "description": "AI assistant via llm-daemon. 'llm' for simple queries, '@' for full assistant with tools.",
    "developer_name": "c0ffee0wl",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.3
    },
    "preferences": [
        {
            "id": "kw_simple",
            "type": "keyword",
            "name": "Simple Query",
            "description": "Quick AI query without tools",
            "default_value": "llm"
        },
        {
            "id": "kw_assistant",
            "type": "keyword",
            "name": "Assistant",
            "description": "Full AI assistant with tools (execute code, search, etc.)",
            "default_value": "@"
        },
        {
            "id": "kw_simple_clip",
            "type": "keyword",
            "name": "Simple + Clipboard",
            "description": "Quick AI query with clipboard content as context",
            "default_value": "llmc"
        },
        {
            "id": "kw_assistant_clip",
            "type": "keyword",
            "name": "Assistant + Clipboard",
            "description": "Full assistant with clipboard content as context",
            "default_value": "@c"
        },
        {
            "id": "wrap_width",
            "type": "input",
            "name": "Text Wrap Width",
            "description": "Maximum characters per line (default: 43)",
            "default_value": "43"
        },
        {
            "id": "wide_script_factor",
            "type": "input",
            "name": "Wide Script Factor",
            "description": "Width multiplier for CJK/Greek/Cyrillic (0.2-1.0, default: 0.5)",
            "default_value": "0.5"
        }
    ]
}
